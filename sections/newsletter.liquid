<div class="section-content footer-sa">
  <div class="div-block-18">
    <div class="newsletter">
      <div class="frame-18">
        <div class="text-block-3">{{ section.settings.heading | newline_to_br }}</div>
      </div>
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email" 
               name="contact[email]" 
               class="newsletter-input"
               placeholder="{{ section.settings.email_placeholder }}"
               required>
        <button type="submit" class="newsletter-submit">
          {{ section.settings.button_text }}
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Receive special offers and first look at\nnew products."
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder text",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.newsletter-form {
  display: flex;
  gap: 10px;
  margin-top: 20px;
}

.newsletter-input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.newsletter-submit {
  padding: 10px 20px;
  background: #000;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.newsletter-submit:hover {
  background: #333;
}
{% endstylesheet %}
