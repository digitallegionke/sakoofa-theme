{{ 'custom-styles.css' | asset_url | stylesheet_tag }}

<div class="collections">
  <div class="collections-grid">
    <div class="collection-featured">
      {% if section.settings.featured_collection_image %}
        <img 
          src="{{ section.settings.featured_collection_image | img_url: '1200x' }}"
          alt="{{ section.settings.featured_collection_title }}"
          class="featured-image"
          loading="lazy"
        >
      {% endif %}
    </div>
    <div class="collection-categories">
      <div class="categories-list">
        <a href="/collections/tops" class="category-link">TOPS</a>
        <a href="/collections/bottoms" class="category-link">BOTTOMS</a>
        <a href="/collections/outerwear" class="category-link">OUTERWEAR</a>
        <a href="/collections/dresses" class="category-link">DRESSES & SKIRTS</a>
      </div>
      <a href="{{ section.settings.view_collection_link }}" class="view-collection-btn">VIEW COLLECTION</a>
    </div>
    <div class="collection-grid-small">
      {% if section.settings.grid_image_1 %}
        <img 
          src="{{ section.settings.grid_image_1 | img_url: '600x' }}"
          alt="Collection item 1"
          class="grid-image"
          loading="lazy"
        >
      {% endif %}
      {% if section.settings.grid_image_2 %}
        <img 
          src="{{ section.settings.grid_image_2 | img_url: '600x' }}"
          alt="Collection item 2"
          class="grid-image"
          loading="lazy"
        >
      {% endif %}
      {% if section.settings.grid_image_3 %}
        <img 
          src="{{ section.settings.grid_image_3 | img_url: '600x' }}"
          alt="Collection item 3"
          class="grid-image"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
</div>

<style>
.collections {
  padding: 80px 40px;
  max-width: 1440px;
  margin: 0 auto;
}

.collections-grid {
  display: grid;
  grid-template-columns: 1fr 300px 1fr;
  gap: 24px;
}

.collection-featured {
  height: 700px;
  overflow: hidden;
}

.featured-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-categories {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40px 0;
}

.categories-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.category-link {
  font-family: 'DM Mono', monospace;
  font-size: 14px;
  color: #000;
  text-decoration: none;
  transition: opacity 0.2s ease;
}

.category-link:hover {
  opacity: 0.7;
}

.view-collection-btn {
  display: inline-block;
  padding: 16px 40px;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-family: 'DM Mono', monospace;
  font-size: 14px;
  text-align: center;
  transition: opacity 0.2s ease;
}

.view-collection-btn:hover {
  opacity: 0.9;
}

.collection-grid-small {
  display: grid;
  grid-template-rows: repeat(3, 1fr);
  gap: 24px;
}

.grid-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (max-width: 1024px) {
  .collections-grid {
    grid-template-columns: 1fr;
  }

  .collection-featured {
    height: 500px;
  }

  .collection-categories {
    padding: 20px 0;
  }

  .collection-grid-small {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr;
  }
}

@media (max-width: 768px) {
  .collections {
    padding: 40px 20px;
  }

  .collection-grid-small {
    grid-template-columns: 1fr;
    grid-template-rows: repeat(3, 200px);
  }
}
</style>

{% schema %}
{
  "name": "Collections List",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_collection_image",
      "label": "Featured Collection Image"
    },
    {
      "type": "text",
      "id": "featured_collection_title",
      "label": "Featured Collection Title",
      "default": "Featured Collection"
    },
    {
      "type": "url",
      "id": "view_collection_link",
      "label": "View Collection Link"
    },
    {
      "type": "image_picker",
      "id": "grid_image_1",
      "label": "Grid Image 1"
    },
    {
      "type": "image_picker",
      "id": "grid_image_2",
      "label": "Grid Image 2"
    },
    {
      "type": "image_picker",
      "id": "grid_image_3",
      "label": "Grid Image 3"
    }
  ],
  "presets": [
    {
      "name": "Collections List",
      "category": "Collection"
    }
  ]
}
{% endschema %}
