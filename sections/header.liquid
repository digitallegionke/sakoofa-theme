<div class="nav-bar">
  <div class="div-block-8">
    <div class="frame-25">
      <a href="/" class="logo-link">
        {% if section.settings.logo != blank %}
          <img 
            src="{{ section.settings.logo | image_url: width: 195 }}"
            alt="{{ shop.name }}"
            width="195"
            height="22"
            loading="lazy"
            class="logo"
          >
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>

      <nav class="menu-2">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="menu-link">{{ link.title | upcase }}</a>
        {% endfor %}
      </nav>

      <div class="div-block-29">
        <a href="{{ routes.cart_url }}" class="shopping-cart-icon">
          <img src="{{ 'cart-icon.svg' | asset_url }}" loading="lazy" width="27" height="26" alt="Cart" />
        </a>
        <button class="menu-icon js-menu-toggle">
          <img src="{{ 'menu-icon.svg' | asset_url }}" loading="lazy" alt="Menu" />
        </button>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.nav-bar {
  background-color: #fff;
  padding: 20px 0;
}

.div-block-8 {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.frame-25 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  width: 195px;
  height: auto;
}

.menu-2 {
  display: flex;
  gap: 20px;
}

.menu-link {
  font-family: var(--font-family);
  text-transform: uppercase;
  text-decoration: none;
  color: inherit;
}

.div-block-29 {
  display: flex;
  align-items: center;
  gap: 20px;
}

.shopping-cart-icon,
.menu-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
}

@media screen and (max-width: 768px) {
  .menu-2 {
    display: none;
  }
}
{% endstylesheet %}
