{% if section.settings.show_announcement %}
<div class="announcement-wrapper">
  <div class="announcement">
    <div class="ann-container">
      {% for i in (1..3) %}
        <div class="text-icon-wrapper">
          <div class="frame-24">
            <div class="announcment-text">{{ section.settings.announcement_text }}</div>
          </div>
          <img src="{{ 'arrow-right.svg' | asset_url }}" loading="lazy" width="8.5" height="8.5" alt="" class="vectors-wrapper-5"/>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on all orders over â‚¬100"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.announcement-wrapper {
  background-color: #000;
  overflow: hidden;
}

.announcement {
  padding: 8px 0;
  color: #fff;
}

.ann-container {
  display: flex;
  gap: 24px;
  animation: scroll 20s linear infinite;
}

.text-icon-wrapper {
  display: flex;
  align-items: center;
  gap: 8px;
  white-space: nowrap;
}

.announcment-text {
  font-family: 'Inconsolata', monospace;
  font-size: 14px;
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}
{% endstylesheet %}