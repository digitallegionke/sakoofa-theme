<style>
.announcement-bar {
  background: #000;
  color: #fff;
  text-align: center;
  padding: 8px 0;
  font-size: 12px;
  font-family: 'DM Mono', monospace;
  white-space: nowrap;
  overflow: hidden;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: transparent;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 40px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
}

.logo {
  color: #000;
  text-decoration: none;
  font-family: 'DM Mono', monospace;
  font-size: 24px;
  letter-spacing: -0.5px;
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: 32px;
}

.nav-link {
  color: #000;
  text-decoration: none;
  font-family: 'DM Mono', monospace;
  font-size: 12px;
  letter-spacing: 0.5px;
  transition: opacity 0.2s ease;
}

.nav-link:hover {
  opacity: 0.7;
}

.cart-icon {
  position: relative;
  width: 20px;
  height: 20px;
}

.cart-count {
  position: absolute;
  top: -8px;
  right: -8px;
  background: #000;
  color: #fff;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 10px;
}

@media (max-width: 1024px) {
  .nav-menu {
    display: none;
  }
}
</style>

