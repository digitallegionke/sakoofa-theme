<div class="recent-drops">
  <div class="drops-header">
    <h2>{{ section.settings.title }}</h2>
  </div>
  
  <div class="drops-grid">
    {% for block in section.blocks %}
      <div class="drop-card" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 600 | image_tag: 
            class: 'drop-image',
            loading: 'lazy'
          }}
        {% endif %}
        <div class="drop-content">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="drop-button w-button">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Recent Drops",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Recent Drops"
    }
  ],
  "blocks": [
    {
      "type": "drop",
      "name": "Drop",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "New Drop"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Recent Drops",
      "blocks": [
        {
          "type": "drop"
        },
        {
          "type": "drop"
        },
        {
          "type": "drop"
        }
      ]
    }
  ]
}
{% endschema %}
