{% if section.settings.show_announcement %}
  <div class="announcement-wrapper">
    <div class="announcement">
      <div class="ann-container">
        {% for i in (1..3) %}
          <div class="text-icon-wrapper">
            <div class="frame-24">
              <div class="announcment-text">{{ section.settings.announcement_text }}</div>
            </div>
            {% if section.settings.show_icon %}
              <img src="{{ 'vectors-wrapper.svg' | asset_url }}" loading="lazy" width="8.5" height="8.5" alt="" class="vectors-wrapper-5"/>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      <div class="ann-container">
        {% for i in (1..3) %}
          <div class="text-icon-wrapper">
            <div class="frame-24">
              <div class="announcment-text">{{ section.settings.announcement_text }}</div>
            </div>
            {% if section.settings.show_icon %}
              <img src="{{ 'vectors-wrapper.svg' | asset_url }}" loading="lazy" width="8.5" height="8.5" alt="" class="vectors-wrapper-5"/>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on all orders over â‚¬100"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show icon",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.announcement-wrapper {
  background-color: #000;
  color: #fff;
  overflow: hidden;
}

.announcement {
  display: flex;
  overflow: hidden;
  padding: 8px 0;
}

.ann-container {
  display: flex;
  align-items: center;
  animation: scroll 20s linear infinite;
}

.text-icon-wrapper {
  display: flex;
  align-items: center;
  padding: 0 20px;
}

.frame-24 {
  display: flex;
  align-items: center;
}

.announcment-text {
  font-family: var(--font-family);
  white-space: nowrap;
}

.vectors-wrapper-5 {
  margin-left: 8px;
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}
{% endstylesheet %}
