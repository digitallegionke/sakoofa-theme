{{ 'custom-styles.css' | asset_url | stylesheet_tag }}

<div class="recent-drops">
  <div class="section-header">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    {% if section.settings.view_all_link != blank %}
      <a href="{{ section.settings.view_all_link }}" class="view-all">View All</a>
    {% endif %}
  </div>

  <div class="products-grid">
    {% for product in section.settings.collection.products limit: 4 %}
      <a href="{{ product.url }}" class="product-card">
        {% if product.featured_image %}
          <img 
            src="{{ product.featured_image | img_url: '800x' }}"
            alt="{{ product.featured_image.alt | escape }}"
            class="product-image"
            loading="lazy"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'product-image placeholder' }}
        {% endif %}
        
        <div class="product-info">
          <h3 class="product-title">{{ product.title }}</h3>
          <span class="product-price">{{ product.price | money }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Recent Drops",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Recent Drops"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "presets": [
    {
      "name": "Recent Drops",
      "category": "Collection"
    }
  ]
}
{% endschema %}
