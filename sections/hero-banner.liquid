{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WINTER 2024"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "VIEW COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<div class="banner">
  <div class="banner-content">
    <h1 class="banner-title">{{ section.settings.heading }}</h1>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>

<style>
.banner {
  width: 100%;
  height: 100vh;
  position: relative;
  margin-top: 121px; /* Header height (78px) + Announcement bar height (43px) */
  background: #000;
}

.banner-content {
  position: absolute;
  bottom: 120px;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #fff;
  width: 100%;
  max-width: 1440px;
  padding: 0 40px;
}

.banner-title {
  font-family: 'DM Mono', monospace;
  font-size: 62px;
  font-weight: 400;
  line-height: 64px;
  text-transform: uppercase;
  margin-bottom: 35px;
  letter-spacing: 2px;
}

.banner-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18px 73px;
  border: 1px solid rgba(255, 255, 255, 0.4);
  background: rgba(0, 0, 0, 0.14);
  backdrop-filter: blur(12px);
  font-family: 'Albert Sans', sans-serif;
  font-size: 15px;
  font-weight: 700;
  color: #fff;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
}

.banner-button:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

@media screen and (max-width: 1024px) {
  .banner-content {
    bottom: 80px;
  }

  .banner-title {
    font-size: 48px;
    line-height: 52px;
  }
}

@media screen and (max-width: 768px) {
  .banner {
    margin-top: 80px;
  }

  .banner-content {
    bottom: 60px;
    padding: 0 20px;
  }

  .banner-title {
    font-size: 36px;
    line-height: 40px;
  }

  .banner-button {
    padding: 15px 50px;
    font-size: 14px;
  }
}
</style>
