<section class="section-sa-2">
  <div class="section-wrap">
    <div class="section-content">
      <div id="w-node-f2a41497-9d30-f64b-72cc-634bd0b7ce0e-1362cce0" class="title-content">
        <div class="title">{{ section.settings.title }}</div>
        {% if section.settings.show_view_all %}
          <a href="{{ section.settings.view_all_link }}" class="secondary-button">
            <div class="text-8">{{ section.settings.view_all_text }}</div>
            <img src="{{ 'arrow-right.svg' | asset_url }}" loading="lazy" width="24" height="24" alt="" class="vectors-wrapper-8"/>
          </a>
        {% endif %}
      </div>

      <div id="w-node-_7125dde7-3954-f537-34f7-0b0dd4aded5b-1362cce0" class="recent-cards">
        {% for product in collections[section.settings.collection].products limit: 2 %}
          <div class="card-2">
            <img 
              src="{{ product.featured_image | image_url: width: 500, height: 615, crop: 'center' }}"
              loading="lazy"
              width="500"
              height="615"
              alt="{{ product.title }}"
              class="image"
            />
            <div class="frame-12">
              <div class="product-text">{{ product.title }}</div>
              <div class="product-price">{{ product.price | money }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Recent Drops",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Recent Drops"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "VIEW ALL"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    }
  ],
  "presets": [
    {
      "name": "Recent Drops"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.section-sa-2 {
  padding: 60px 0;
}

.section-wrap {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.title-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
}

.title {
  font-family: var(--font-family);
  font-size: 24px;
  font-weight: 700;
}

.secondary-button {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: inherit;
}

.text-8 {
  font-family: var(--font-family);
  font-size: 14px;
  font-weight: 700;
}

.recent-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30px;
}

.card-2 {
  display: flex;
  flex-direction: column;
}

.image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.frame-12 {
  margin-top: 20px;
}

.product-text {
  font-family: var(--font-family);
  font-size: 18px;
  margin-bottom: 8px;
}

.product-price {
  font-family: var(--font-family);
  font-size: 14px;
  color: #666;
}

@media screen and (max-width: 768px) {
  .recent-cards {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}
