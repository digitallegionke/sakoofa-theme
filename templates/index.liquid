{{ 'custom-styles.css' | asset_url | stylesheet_tag }}

<div class="announcement-bar">
  <p>Free shipping on all orders over â‚¬100</p>
</div>

{% section 'header' %}

<div class="hero-section">
  <div class="hero-split">
    <img src="{{ 'hero-left.jpg' | asset_url }}" class="hero-image">
    <img src="{{ 'hero-right.jpg' | asset_url }}" class="hero-image">
  </div>
  <div class="hero-content">
    <h1>WINTER 2024</h1>
    <a href="/collections/winter-2024" class="hero-button">VIEW COLLECTION</a>
  </div>
</div>

{% section 'hero-banner' %}

<div class="page-width">
  {% section 'collection-grid' %}
  {% section 'reviews' %}
  {% section 'blog-section' %}
</div>

<div class="collections">
  <h2>COLLECTIONS</h2>
  {% for collection in collections limit:3 %}
    <a href="{{ collection.url }}">
      <img src="{{ collection.image | img_url: 'large' }}">
      <h3>{{ collection.title }}</h3>
    </a>
  {% endfor %}
</div>

<div class="reviews">
  <h2>REVIEWS</h2>
  <div class="review">
    <p>"Kicks can't be beaten. Found kicks here that I'd been searching for months. Best spot for rare finds!"</p>
    <span>- Chris L.</span>
  </div>
</div>

<div class="blog">
  <h2>BLOG</h2>
  {% for article in blogs.news.articles limit:2 %}
    <a href="{{ article.url }}">
      <img src="{{ article.image | img_url: 'large' }}">
      <h3>{{ article.title }}</h3>
      <span>{{ article.published_at | date: '%b %d, %Y' }}</span>
    </a>
  {% endfor %}
  <a href="/blogs/news">VIEW ALL BLOGS</a>
</div>

{% section 'footer' %}
