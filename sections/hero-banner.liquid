{{ 'custom-styles.css' | asset_url | stylesheet_tag }}

<div class="hero-banner">
  <div class="hero-image-container">
    <div class="hero-image hero-image-left" style="background-image: url('{{ section.settings.image_left | img_url: 'master' }}')"></div>
    <div class="hero-image hero-image-right" style="background-image: url('{{ section.settings.image_right | img_url: 'master' }}')"></div>
  </div>
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>

<style>
.hero-banner {
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.hero-image-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  height: 100%;
}

.hero-image {
  background-size: cover;
  background-position: center;
  position: relative;
}

.hero-image::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
}

.hero-content {
  position: absolute;
  left: 50%;
  bottom: 120px;
  transform: translateX(-50%);
  text-align: center;
  color: #fff;
  z-index: 2;
}

.hero-title {
  font-family: 'DM Mono', monospace;
  font-size: 62px;
  font-weight: 400;
  letter-spacing: -0.5px;
  margin-bottom: 30px;
}

.hero-button {
  display: inline-block;
  padding: 16px 40px;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: #fff;
  text-decoration: none;
  font-family: 'DM Mono', monospace;
  font-size: 14px;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
}

.hero-button:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .hero-image-container {
    grid-template-columns: 1fr;
  }
  
  .hero-image-right {
    display: none;
  }
  
  .hero-title {
    font-size: 42px;
  }
  
  .hero-content {
    bottom: 80px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WINTER 2024"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "VIEW COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
