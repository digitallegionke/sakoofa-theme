{{ 'custom-styles.css' | asset_url | stylesheet_tag }}

<header class="header">
  <div class="announcement">
    <div class="announcement-content">
      {% for i in (1..4) %}
        <span class="announcement-text">Free shipping on orders over $150</span>
        <div class="diamond"></div>
        <span class="announcement-text">20% off your first order</span>
        <div class="diamond"></div>
      {% endfor %}
    </div>
  </div>

  <div class="nav-bar">
    <div class="nav-container">
      <a href="/" class="logo">SAKOOFA</a>
      <nav class="nav-menu">
        <a href="/collections/all" class="nav-link">Shop</a>
        <a href="/collections" class="nav-link">Collections</a>
        <a href="/pages/about" class="nav-link">About</a>
        <a href="/pages/contact" class="nav-link">Contact</a>
      </nav>
    </div>
  </div>
</header>

<style>
.header {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: transparent;
}

.announcement {
  background: #000;
  color: #fff;
  text-align: center;
  padding: 8px 0;
  font-family: 'DM Mono', monospace;
  font-size: 12px;
  overflow: hidden;
}

.announcement-content {
  white-space: nowrap;
  animation: scroll 20s linear infinite;
}

.announcement-text {
  display: inline-block;
  padding-right: 50px;
}

.diamond {
  display: inline-block;
  width: 10px;
  height: 10px;
  background-color: #fff;
  transform: rotate(45deg);
  margin: 0 10px;
}

.nav-bar {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 20px 40px;
}

.nav-container {
  max-width: 1440px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-family: 'DM Mono', monospace;
  font-size: 24px;
  color: #000;
  text-decoration: none;
  font-weight: 500;
}

.nav-menu {
  display: flex;
  gap: 32px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-link {
  font-family: 'DM Mono', monospace;
  font-size: 12px;
  color: #000;
  text-decoration: none;
  text-transform: uppercase;
  transition: opacity 0.3s ease;
}

.nav-link:hover {
  opacity: 0.7;
}

@media (max-width: 1024px) {
  .nav-bar {
    padding: 15px 20px;
  }
  
  .nav-menu {
    gap: 20px;
  }
}

@media (max-width: 768px) {
  .nav-menu {
    display: none;
  }
}
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on all orders over â‚¬100"
    }
  ]
}
{% endschema %}
