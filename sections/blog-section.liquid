<div class="blog">
  <div class="blog-2">{{ section.settings.title }}</div>
  <div class="frame-23">
    <div class="frame-24">
      {% for article in blogs[section.settings.blog].articles limit: 2 %}
        <div class="frame-{% if forloop.first %}25{% else %}27{% endif %}">
          {% if article.image %}
            <img 
              class="image-{% if forloop.first %}8{% else %}9{% endif %}" 
              src="{{ article.image | img_url: 'master' }}" 
              alt="{{ article.title }}"
              loading="lazy"
            >
          {% endif %}
          <div class="frame-{% if forloop.first %}26{% else %}8{% endif %}">
            <div class="text-wrapper-6">{{ article.title }}</div>
            <div class="text-wrapper-7">{{ article.published_at | date: '%B %d, %Y' }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="frame-28">
      <div class="frame-29">
        <a href="{{ blogs[section.settings.blog].url }}" class="text-wrapper-5">VIEW ALL BLOGS</a>
        <img class="img-2" src="{{ 'arrow-right.svg' | asset_url }}" alt="View all">
      </div>
      <img class="line" src="{{ 'line-4.svg' | asset_url }}">
    </div>
  </div>
</div>

<style>
.blog {
  padding: 4rem 2rem;
}

.blog-2 {
  font-family: "DM Mono", monospace;
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 2rem;
}

.frame-24 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  margin-bottom: 2rem;
}

.frame-25,
.frame-27 {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.image-8,
.image-9 {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

.frame-26,
.frame-8 {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.frame-28 {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 1rem;
}

.frame-29 {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #000;
}
</style>

{% schema %}
{
  "name": "Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "BLOG"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Blog Section"
    }
  ]
}
{% endschema %}
